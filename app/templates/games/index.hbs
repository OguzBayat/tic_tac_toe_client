<div class='container'>
  <button
    class='btn btn-rounded'
    id='replay'
    type='button'
    {{action this.addGame}}
  >Create New Game</button>
  <h2>List of Games</h2>

  <ul class='list-group list-group-flush'>
    {{#each @model as |game|}}
      <li class='list-group-item'>
        {{#if game.winner_id}}
          Game{{game.id}}
          - Player{{game.winner_id}}
          wins
        {{else}}
          <LinkTo
            @route='games.show'
            @model='{{game.id}}'
          >Game{{game.id}}</LinkTo>
        {{/if}}

      </li>
    {{/each}}
  </ul>
</div>